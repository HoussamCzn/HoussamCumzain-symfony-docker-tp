{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="mb-4">Login</h1>
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('app_login') }}" method="post" class="needs-validation" novalidate>
                    <div class="form-group mb-3">
                        <label for="username">Email:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required class="form-control" placeholder="example@example.com">
                    </div>
                    <div class="form-group mb-4">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" required class="form-control" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
                <div class="mt-4 text-center">
                    <p class="text-muted">Don't have an account? <a href="{{ path('app_register') }}" class="text-primary" style="text-decoration: underline;">Create one</a></p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
